doctype html
html
  head
    title Add movie
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    div.container
      div
        a(href='/addmovie').btn.btn-secondary New movie
      div
        form(action='/addmovie', method='POST')
          div
            label Title
              div
              input(type="text", name="title").form.form-text
          div
            label Director
              div
              input(type="text", name="director").form.form-text
          div
            label Year
              div
              input(type="number", name="year").form.form-text
          div
            <br>
              input(type="submit", value="Add").btn.btn-success